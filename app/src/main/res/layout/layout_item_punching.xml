<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/punching_item_height">
    <TextView android:id="@+id/tv_punchingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:text="2015年10月26日 22时23分11秒"
        />
    <TextView android:id="@+id/tv_punching_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
        android:text="@string/punching_type_on_duty"
        />
</RelativeLayout>